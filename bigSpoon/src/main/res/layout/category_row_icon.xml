<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/category_list_restaurant_icon"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:paddingBottom="15dp"
        android:background="@drawable/container_shadow"
        android:padding="3dp"
        android:layout_margin="8dp"
        android:paddingTop="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_margin="8dp"
        android:paddingTop="15dp">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView android:id="@+id/phone_icon"
                    android:src="@drawable/phone_small"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    />
                <TextView android:id="@+id/phone_text"
                    android:paddingTop="5dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:gravity="top"
                    android:text="+65 6343 1808"
                    android:textColor="@color/text_light_gray"
                    android:textAppearance="@style/FontProxiRegular"
                    android:textSize="10sp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView android:id="@+id/alarm_icon"
                    android:src="@drawable/alarm_small"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    />
                <TextView android:id="@+id/open_hours"
                    android:paddingTop="5dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:lineSpacingMultiplier="1.2"
                    android:gravity="top"
                    android:text="Monday-Sun\n10am-11:30pm\nMonday-Sun\n10am-11:30pm\n"
                    android:textColor="@color/text_light_gray"
                    android:textAppearance="@style/FontProxiRegular"
                    android:textSize="10sp"
                    />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>