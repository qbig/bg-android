<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:id="@+id/item_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="1dp"
            tools:context=".ItemsActivity">

            <CheckedTextView
                android:id="@+id/neworder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/order_these"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/BigSpoonDarkBlue"
                android:background="@color/BigSpoonLightGray"
                android:textAppearance="@style/FontSegoeUISemiBold"
                android:gravity="left"
                android:textSize="18sp" />

            <ExpandableListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/neworder"
                android:layout_marginTop="15dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="10.0sp"
                android:fadingEdge="none"
                android:groupIndicator="@android:color/transparent"></ExpandableListView>

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@android:id/list"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:background="@color/BigSpoonLightGray"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Add Notes"
                android:textColor="@color/text_dark_gray"
                android:textAppearance="@style/FontSegoeUILight"
                android:textSize="16sp"
                />

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:stretchColumns="0,1">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button1"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtotal :"
                        android:textSize="15sp"
                        android:textAppearance="@style/FontSegoeUISemiBold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="$0.00"
                        android:textSize="15sp"
                        android:textAppearance="@style/FontSegoeUISemiBold" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Charge(0%)"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="$0.00" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GST (0%) :" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="$0.00" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total :"
                        android:textSize="20sp"
                        android:textAppearance="@style/FontSegoeUIBold" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="$0.00"
                        android:textSize="20sp"
                        android:textAppearance="@style/FontSegoeUIBold" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tableLayout2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@color/BigSpoonPink"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Send to Kitchen"
                android:textColor="@color/white"
                android:textAppearance="@style/FontSegoeUISemiBold"
                android:textSize="18sp" />

            <CheckedTextView
                android:id="@+id/ordereditems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="@string/sent_orders"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/BigSpoonDarkBlue"
                android:background="@color/BigSpoonLightGray"
                android:textAppearance="@style/FontSegoeUISemiBold"
                android:gravity="left"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/listOfOrderPlaced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ordereditems"
                android:layout_marginTop="15dp"></ListView>

            <TableLayout
                android:id="@+id/tableLayout3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listOfOrderPlaced"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:stretchColumns="0,1">

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtotal :"
                        android:textSize="15sp"
                        android:textAppearance="@style/FontSegoeUISemiBold" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="$0.00"
                        android:textSize="15sp"
                        android:textAppearance="@style/FontSegoeUISemiBold" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Charge(0%)"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="$0.00" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GST (0%) :" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="$0.00" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total :"
                        android:textSize="20sp"
                        android:textAppearance="@style/FontSegoeUIBold" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="$0.00"
                        android:textSize="20sp"
                        android:textAppearance="@style/FontSegoeUIBold" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_below="@+id/tableLayout3"
                android:layout_marginTop="10dp"
                android:text="Note that there may be discrepancies between BigSpoon and the actual bill."
                android:textSize="11sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:layout_below="@+id/textView17"
                android:background="#ffffff"
                android:gravity="center_horizontal" />
        </RelativeLayout>
    </ScrollView>

    <GridView
        android:id="@+id/gv_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/botton_action_bar"
        android:horizontalSpacing="2dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:stretchMode="columnWidth"></GridView>

    <TextView
        android:id="@+id/corner"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@id/gv_action_menu"
        android:layout_alignTop="@id/gv_action_menu"
        android:layout_marginRight="30dp"
        android:background="@drawable/badge_circle"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>