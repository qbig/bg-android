<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/BigSpoonOrange" />
            <gradient android:angle="-90" android:startColor="@color/BigSpoonOrange" android:endColor="@color/BigSpoonLightOrange"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/BigSpoonLightOrange" />
            <solid android:color="@color/BigSpoonLightOrange"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/BigSpoonOrange" />
            <gradient android:angle="-90" android:startColor="@color/BigSpoonLightOrange" android:endColor="@color/BigSpoonOrange" />
        </shape>
    </item>
</selector>
