<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:id="@+id/item_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="1dp"
            tools:context=".ItemsActivity">

            <CheckedTextView
                android:id="@+id/new_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/order_these"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/text_dark_gray"
                android:background="@color/BigSpoonLightGray"
                android:textAppearance="@style/FontProxiRegular"
                android:gravity="left"
                android:textSize="18sp" />

            <ExpandableListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_order"
                android:layout_marginTop="15dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="10.0sp"
                android:fadingEdge="none"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:listSelector="@android:color/transparent"
                android:groupIndicator="@android:color/transparent"></ExpandableListView>

            <Button
                android:id="@+id/add_note_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@android:id/list"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:background="@color/BigSpoonLightGray"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Add Notes"
                android:textColor="@color/text_dark_gray"
                android:textAppearance="@style/FontProxiRegular"
                android:textSize="16sp"
                />

            <TableLayout
                android:id="@+id/currentOrderTable"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_note_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:stretchColumns="0,1">

                <TableRow
                    android:id="@+id/rowSubTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/add_note_btn"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtotal :"
                        android:textSize="12sp"
                        android:textColor="@color/AddNoteHintColor"
                        android:textStyle="bold"
                        android:textAppearance="@style/FontProxiSemiBold" />

                    <TextView
                        android:id="@+id/currentSubTotalValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="25dp"
                        android:text="$0.0"
                        android:textSize="12sp"
                        android:textColor="@color/AddNoteHintColor"
                        android:textStyle="bold"
                        android:textAppearance="@style/FontProxiSemiBold" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/currentServiceChargeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Charge(0%)"
                        android:textColor="@color/AddNoteHintColor"
                        android:textSize="12sp"
                        android:textAppearance="@style/FontProxiRegular"/>

                    <TextView
                        android:id="@+id/currentServiceChargeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="25dp"
                        android:textColor="@color/AddNoteHintColor"
                        android:textSize="12sp"
                        android:textAppearance="@style/FontProxiRegular"
                        android:text="$0.0" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/currentGSTLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/AddNoteHintColor"
                        android:textSize="12sp"
                        android:textAppearance="@style/FontProxiRegular"
                        android:text="GST (0%) :" />

                    <TextView
                        android:id="@+id/currentGSTValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="25dp"
                        android:textColor="@color/AddNoteHintColor"
                        android:textSize="12sp"
                        android:textAppearance="@style/FontProxiRegular"
                        android:text="$0.0" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total :"
                        android:textSize="20sp"
                        android:textColor="@color/BigSpoonLightOrange"
                        android:textStyle="bold"
                        android:textAppearance="@style/FontProxiSemiBold"
                        android:layout_marginLeft="85dp"
                        />

                    <TextView
                        android:id="@+id/currentTotalValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.0"
                        android:textSize="20sp"
                        android:textColor="@color/BigSpoonLightOrange"
                        android:textStyle="bold"
                        android:textAppearance="@style/FontProxiSemiBold"
                        android:layout_marginRight="100dp"/>
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/submit_button"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currentOrderTable"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@color/BigSpoonLightOrange"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="35dp"
                android:text="Send to Cashier"
                android:textColor="@color/white"
                android:textAppearance="@style/FontProxiSemiBold"
                android:textSize="20sp" />
            <ProgressBar
                android:id="@+id/progressBarMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="false"
                android:layout_marginTop="125dp"
                android:indeterminate="true"
                android:visibility="invisible" />
            <CheckedTextView
                android:id="@+id/orderedItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/submit_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="@string/sent_orders"
                android:paddingTop="20dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:textColor="@color/text_dark_gray"
                android:background="@color/BigSpoonLightGray"
                android:textAppearance="@style/FontProxiRegular"
                android:gravity="left"
                android:textSize="18sp" />
            <CheckedTextView
                android:id="@+id/orderedItemsHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderedItems"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:text="@string/sent_orders_hint"
                android:paddingTop="0dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/text_dark_gray"
                android:background="@color/BigSpoonLightGray"
                android:textAppearance="@style/FontProxiRegular"
                android:gravity="left"
                android:textSize="9sp" />

            <ListView
                android:id="@+id/listOfOrderPlaced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderedItems"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"></ListView>

            <TableLayout
                android:id="@+id/sentOrderTable"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listOfOrderPlaced"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:stretchColumns="0,1"
                >

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/sentRowSubTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtotal :"
                        android:textSize="12sp"
                        android:textColor="@color/text_item_gray"
                        android:textStyle="bold"
                        android:textAppearance="@style/FontProxiSemiBold" />

                    <TextView
                        android:id="@+id/sentSubTotalValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="35dp"
                        android:text="$0.0"
                        android:textSize="12sp"
                        android:textColor="@color/text_item_gray"
                        android:textStyle="bold"
                        android:textAppearance="@style/FontProxiSemiBold" />
                </TableRow>

                <TableRow
                    android:id="@+id/sentRowServiceCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/sentServiceChargeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Charge(0%)"
                        android:textSize="12sp"
                        android:textColor="@color/text_item_gray"
                        android:textAppearance="@style/FontProxiRegular" />

                    <TextView
                        android:id="@+id/sentServiceChargeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="35dp"
                        android:textSize="12sp"
                        android:textColor="@color/text_item_gray"
                        android:textAppearance="@style/FontProxiRegular"
                        android:text="$0.0" />
                </TableRow>

                <TableRow
                    android:id="@+id/sentRowGST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/sentGSTLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/text_item_gray"
                        android:textAppearance="@style/FontProxiRegular"
                        android:text="GST (0%) :" />

                    <TextView
                        android:id="@+id/sentGSTValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="35dp"
                        android:textSize="12sp"
                        android:textColor="@color/text_item_gray"
                        android:textAppearance="@style/FontProxiRegular"
                        android:text="$0.0" />
                </TableRow>

                <TableRow
                    android:id="@+id/sentRowTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/sentTotalLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total :"
                        android:textSize="20sp"
                        android:textColor="@color/BigSpoonOrange"
                        android:textStyle="bold"
                        android:textAppearance="@style/FontProxiSemiBold"
                        android:layout_marginLeft="85dp"
                        />

                    <TextView
                        android:id="@+id/sentTotalValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="$0.0"
                        android:textSize="20sp"
                        android:textColor="@color/BigSpoonOrange"
                        android:textStyle="bold"
                        android:textAppearance="@style/FontProxiSemiBold"
                        android:layout_marginRight="100dp"/>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/disclaimerLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_below="@+id/sentOrderTable"
                android:layout_marginTop="10dp"
                android:text="Note that there may be discrepancies between BigSpoon and the actual bill."
                android:textColor="@color/text_dark_gray"
                android:textSize="11sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:layout_below="@+id/disclaimerLabel"
                android:background="#ffffff"
                android:gravity="center_horizontal" />
        </RelativeLayout>
    </ScrollView>

    <GridView
        android:id="@+id/gv_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_action_bar"
        android:horizontalSpacing="2dp"
        android:numColumns="3"
        android:scrollbars="none"
        android:stretchMode="columnWidth"></GridView>

    <TextView
        android:id="@+id/corner"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignRight="@id/gv_action_menu"
        android:layout_alignTop="@id/gv_action_menu"
        android:layout_marginRight="30dp"
        android:background="@drawable/badge_circle"
        android:gravity="center"
        android:text="1"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>