<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="4dp" >

    <ImageView
        android:id="@+id/menuitem"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fb_2" />

    <ImageView
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/out_of_stock" />

    <!--
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
    -->

    <TextView
        android:id="@+id/itemdesc"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/menuitem"
        android:background="@drawable/text_background_gradient"
        android:gravity="bottom"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:text="Testing.....!!!!!!"
        android:textColor="#514747"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textitemprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/itemdesc"
        android:layout_alignTop="@+id/itemdesc"
        android:layout_marginTop="5dp"
        android:paddingRight="10dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textitemname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/itemdesc"
        android:layout_alignTop="@+id/itemdesc"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/addbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:paddingRight="15dp"
        android:src="@drawable/add_btn_with_circle" />

</RelativeLayout>