<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/new_entry_background"
android:orientation="vertical" >

     <ImageView
         android:id="@+id/imageView2"
         android:layout_width="250dp"
         android:layout_height="200dp"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:background="@null"
         android:src="@drawable/bg_logo"/>

     <EditText
         android:id="@+id/bottom"
         android:layout_width="250dp"
         android:layout_height="50dp"
         android:layout_alignLeft="@+id/middle"
         android:layout_below="@+id/middle"
         android:background="@drawable/down"
         android:ellipsize="start"
         android:ems="10"
         android:hint="@string/password"
         android:singleLine="true" />

     <ImageButton
         android:id="@+id/imageButton1"
         android:layout_width="250dp"
         android:layout_height="50dp"
         android:layout_alignLeft="@+id/bottom"
         android:layout_below="@+id/bottom"
         android:layout_marginTop="29dp"
         android:src="@drawable/new_signup_btn" />

     <EditText
         android:id="@+id/middle"
         android:layout_width="250dp"
         android:layout_height="50dp"
         android:layout_alignLeft="@+id/top"
         android:layout_below="@+id/top"
         android:background="@drawable/middle_withoutborder"
         android:ellipsize="start"
         android:ems="10"
         android:hint="@string/emailAddress"
         android:singleLine="true" />

     <EditText
         android:id="@+id/top"
         android:layout_width="250dp"
         android:layout_height="50dp"
         android:layout_alignLeft="@+id/imageView2"
         android:layout_centerVertical="true"
         android:background="@drawable/top"
         android:ellipsize="start"
         android:ems="10"
         android:hint="@string/fullName"
         android:singleLine="true" />
     
</RelativeLayout>