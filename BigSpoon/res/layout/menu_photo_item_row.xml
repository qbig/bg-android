<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingTop="4dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/menuitem"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/fb_2"
        android:scaleType="centerCrop" 
        />

          <!--    android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY" -->

    <ImageButton
        android:id="@+id/addbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:paddingRight="15dp"
        android:src="@drawable/add_btn_with_circle"
        android:background="@android:color/transparent"
        />

     <TextView
            android:id="@+id/itemdesc"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/menuitem"
            android:background="@drawable/text_background_gradient"
            android:gravity="bottom"
            android:paddingLeft="10dp"
            android:text="Testing.....!!!!!!"
            android:textColor="#514747"
            android:paddingBottom="15dp"
            android:textSize="12sp" />
    
    <TextView
        android:id="@+id/textitemprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/itemdesc"
        android:layout_alignTop="@+id/itemdesc"
        android:layout_marginTop="5dp"
        android:paddingRight="10dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16sp"
         />

        <TextView
            android:id="@+id/textitemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/itemdesc"
            android:layout_alignTop="@+id/itemdesc"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textStyle="italic" />


</RelativeLayout>
